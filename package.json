{
  "name": "voice-agent-mastra-demo",
  "version": "1.1.0",
  "description": "Voice Agent Demo with Mastra, mem0, and LiveKit - Modern TypeScript Monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.19.4",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rimraf .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "install:all": "pnpm install",
        "postinstall": "turbo build --filter=@voice-agent-mastra-demo/shared --filter=@voice-agent-mastra-demo/agents"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "typescript": "^5.8.3",
    "prettier": "^3.4.2",
    "eslint": "^9.18.0",
    "turbo": "^2.3.3",
    "rimraf": "^6.0.1",
    "vitest": "^2.1.8",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2"
  }
} 