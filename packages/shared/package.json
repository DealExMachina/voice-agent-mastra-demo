{
  "name": "@voice-agent-mastra-demo/shared",
  "version": "1.0.0",
  "description": "Shared utilities and types for Voice Agent Mastra Demo",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "clean": "rimraf dist .tsbuildinfo",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.24.1",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.18.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=20.19.4"
  }
} 